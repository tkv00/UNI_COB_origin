<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 테두리 색상을 회색으로 설정 -->
    <stroke
        android:width="2dp"
        android:color="@android:color/darker_gray" />

    <!-- 배경 색상을 흰색으로 설정 -->
    <solid android:color="@android:color/white" />

    <!-- 모서리를 둥글게 설정 -->
    <corners android:radius="15dp" />
</shape>
